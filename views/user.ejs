      <a href="/list"><i class="far fa-edit icon"></i></a>


      <div class="nav-item dropdown">
        <a class="nav-link dropdown-toggle spacing" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          <img class="lupa" src="../images/TerminatorProfile.png">
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
