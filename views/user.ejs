      <div class="col-9 profileDescription text-white">
        <h1>Nahuel Tarricone</h1>
        <h2>Productor - Camarógrafo - Realizador Audiovisual</h2>
      </div>
    </div>
  </div>

  <!--Options Bar-->
  <div class="container-fluid">
    <div class="row ">

      <div class="col-1 fixed">
          <button onclick="openPanel()" type="button" id="boton" class="btn btn-outline-secondary boton"><i class="fas fa-angle-right"></i></button>

      <div id="myDIV"class="hide">

        <a class="sidePanelContent" href="#">
          <h4>Perfil</h4>
        </a>

        <div class="dropright mt-4 ">
          <a class="dropdown-toggle dropdownMedia sidePanelContent" href="#" id="dropdownMenuLink"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Multimedia
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="/user">Mis Artículos</a>
            <a class="dropdown-item" href="#">Mis Fotos</a>
            <a class="dropdown-item" href="#">Mis Videos</a>
          </div>

        </div>
        <a class="sidePanelContent" href="#">
          <h4 class="mt-4 ">Configuración</h4>
        </a>
      </div>
      </div>
      <div class="col-1 dissapear"></div>
      <div class="col-10">
        <!--ARTICLES-->
        <div class="container-fluid pt-5">
          <div class="row">
            <div class="col-6">
              <h1 class="ml-5">Mis Artículos</h1>
            </div>
            <div class="col-6 pt-3">
              <div class="btn-group ">
                <!-- <button class="btn btn-sm btn-default btn-sorteable">Fecha <i class="fa fa-sort"></i></button> -->
                <button class="btn btn-sm btn-default btn-sorteable">Costo <i class="fa fa-sort"></i></button>
                <button class="btn btn-sm btn-default btn-sorteable">Tipo de Contenido <i
                    class="fa fa-sort"></i></button>
                <button class="btn btn-sm btn-default btn-sorteable">Vistas <i class="fa fa-sort"></i></button>
                <button class="btn btn-sm btn-default btn-sorteable">Credibilidad <i class="fa fa-sort"></i></button>

              </div>
            </div>
          </div>
          <div class="row">
            <% results.forEach(function(article){  %>
            <div class="col-12 col-md-3  mt-2 mb-5 ml-5">

              <div class="card" style="width: 18rem;">
                <div class="card-header">
                  <h6 class="card-text"><%= article.category %></h6>
                  <h6 id="<%= article.price %>" class="card-text"><%= article.price %>€</h6>
                </div>
                <img class="imageddbb" src="/uploads/<%= article.file %>">
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p name="texto_articulo<%= article.article_id%>" id="texto_articulo<%= article.article_id%>" value="<%= article.text %>"
                    class="card-text"><%= article.text %></p>
                  <a class="btn botonColor" href="/fullArticle/<%= article.article_id%>">Ver Completo</a>
                  <a class="btn botonColor" href="/update/<%= article.article_id%>"><i class="fas fa-edit"></i></i></a>
                  <a class="btn botonColor" href="/delete/<%= article.article_id %>"><i
                      class="fas fa-trash-alt"></i></a>
                  <!-- <p name="date_article<%= article.date%>" id="date_article<%= article.date%>" class="card-text text-right"><%= article.date %></p> -->
                  <!--INTENTAR MOSTRAR MENOS FECHA-->
                  <!-- <p class="card-text"><%= article.type %></p>  NO NECESITO VER EL TIPO DE ARTICULO POR AHORA-->
                </div>
              </div>


            </div>
            <%  }) %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- FOOTER -->
  <footer class="page-footer lightGrey">
    
    <div class="text-center py-3">© 2019 Copyright: RedKane
    </div>


  </footer>

